{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "rootDir": "./"
  },
  "include": ["./pkg/*/src/**/*"],
  "exclude": ["node_modules"]
}
